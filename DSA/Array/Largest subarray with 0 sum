#Your task is to complete this function
#Your should return the required output
class Solution:
    def maxLen(self, n, arr):
        #Code here
        dic={}
        dic[0]=0
        sum=0
        lenght=0
        for i in range(n):
            sum+=arr[i]
            if (sum not in dic):
                dic[sum]=i+1
            else:
                lenght=max(i+1-dic[sum],lenght)
        return(lenght)
        
            


#{ 
 # Driver Code Starts
if __name__=='__main__':
    t= int(input())
    for i in range(t):
        n = int(input())
        arr = list(map(int, input().strip().split()))
        ob = Solution()
        print(ob.maxLen(n ,arr))
