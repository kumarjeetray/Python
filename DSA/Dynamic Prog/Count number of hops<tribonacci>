#User function Template for python3

class Solution:
    #Function to count the number of ways in which frog can reach the top.
    def countWays(self,n):
        
        # code here
        if n == 1 or n == 2:
            return n
        a,b,c = 0,0,1
        for i in range(n):
            a,b,c = b,c,a+b+c
        return c%1000000007


